<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.edit.EditDeveloperFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_edit_photo"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:background="@color/colorPrimary"
                android:src="@drawable/baseline_person_add_alt_black_24dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/tv_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:hint="Enter Name"
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/tv_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:hint="Enter Email"
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/tv_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:hint="Enter Phone Number"
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:inputType="number"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/tv_edit_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:maxLines="3"
                android:hint="Enter Company Name"
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:inputType="text"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/colorOnPrimary"
                android:background="@color/colorOnPrimary"
                android:text="@string/save_changes" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</FrameLayout>